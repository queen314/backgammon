.toast
    position: absolute;
    top: 100px;
    right: 0;
    bottom: 0;
    left: 0;
    height: $height=60px;
    line-height: $height;
    width: 200px;
    margin:0 auto;
    text-align: center;
    z-index: 10;
    border-radius: 3px;
    border: 1px solid #eee;
    background: rgba(0,0,0,0.07);
    color: red;

