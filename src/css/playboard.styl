@import "./mixin"
$lineColor= #000;
#playboard
    height: $size=510px;
    width: $size;
    // padding: 15px;
    border: 2px solid $lineColor;
    margin:100px auto;
    &.canvas-container
        box-sizing: border-box;
    .axis-container
        clearfix()
        .axis-item
            float: left;
            width: $ceilSize = $size * $ceil ;
            height: $ceilSize;
            position: relative;
            cursor: pointer;
            background: no-repeat center center;
            &:hover:before
                content: "âœ ";
                display: table-cell;
                position: absolute;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                height: $iconSize=$ceilSize * 0.7;
                line-height: $iconSize;
                width: $iconSize;
                margin: auto;
                font-size: $iconSize * 1.25;
                text-align: center;
                color: red;
            &:after
                content: " ";
                position: absolute;
                left: 50%;
                top: 50%;
                border: 1px solid $lineColor;
                border-bottom: 0;
                border-right: 0;
                bottom: -50%;
                right: -50%;
                z-index: -2;
            &-right:after
                border-top: 0;
            &-bottom:after
                border-left: 0;
            &[player]:before
                background: #fff;
                z-index: -1;
                position: absolute;
                top: 2px;
                bottom: 2px;
                left: 2px;
                right: 2px;
                content: " ";
            &[player]
                cursor: not-allowed;
            &[player="1"]
                background-image: url("../images/black.png");
            &[player="2"]
                background-image: url("../images/white.png");
    canvas
        width: 100%;
        height: 100%;