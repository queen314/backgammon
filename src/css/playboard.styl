@import "./mixin"
$lineColor= #000;
$highlight = red;
#playboard
    height: $size=510px;
    width: $size;
    // padding: 15px;
    border: 2px solid $lineColor;
    &.canvas-container
    //     box-sizing: border-box;
    .axis-container
        clearfix()
        .axis-item
            float: left;
            width: $ceilSize = $size * $ceil ;
            height: $ceilSize;
            position: relative;
            cursor: pointer;
            background: no-repeat center center;
            &:hover:before
                fillparent()
                content: "✠";
                display: table-cell;
                height: $iconSize=$ceilSize * 0.7;
                line-height: $iconSize;
                width: $iconSize;
                margin: auto;
                font-size: $iconSize * 1.25;
                text-align: center;
                color: $highlight;
            &:after
                content: " ";
                position: absolute;
                left: 50%;
                top: 50%;
                border: 1px solid $lineColor;
                border-bottom: 0;
                border-right: 0;
                bottom: -50%;
                right: -50%;
                z-index: -2;
            &-right:after
                border-top: 0;
            &-bottom:after
                border-left: 0;
            &[player]:before
                background: #fff;
                z-index: -1;
                position: absolute;
                top: 2px;
                bottom: 2px;
                left: 2px;
                right: 2px;
                content: " ";
            &[player]
                cursor: not-allowed;
            &[player="1"]
                background-image: url("../images/black.png");
            &[player="2"]
                background-image: url("../images/white.png");
        .last-hand
        .win-line
            &>i
                fillparent()
                z-index: 1;
                text-align: center;
                height: 12px;
                width: 12px;
                line-height: 12px;
                color: $highlight;
                font-style: normal;
                animation: flashing 0.5s infinite;
                &:before
                    content: "▪";
        .win-line>i
            transform: rotate(45deg);
    // for canvas
    canvas
        width: 100%;
        height: 100%;
        transform: translate(0.5px,0.5px);
    .pointer
        position: absolute;
        left: -1000px;
        top: -1000px;
        width: $ceilSize = $size * $ceil ;
        height: $ceilSize ;
        line-height: $ceilSize ;
        text-align: center;
        color: $highlight;
        &:before
            content: "✠";
