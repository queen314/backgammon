.player-info
    position: absolute;
    right: 50px;
    top: 0;
    bottom: 0;
    .player-item
        padding: 10px;
        line-height: $size=30px;
        img
            vertical-align: middle;
            margin-left: 10px;
            width: $size;
    button
        background: #fff;
        border: 1px solid #ccc;
        border-radius: 3px;
        cursor: pointer;
        color: #999;
        display: inline-block;
        min-width: 5em;
        &:not([disabled]):hover
            color: #666;
        &[disabled]
            cursor: not-allowed;
        &.full-btn
            width: 100%;
    .info-group + .info-group
        margin-top: 20px;
    [render]:after
        content: '(当前' attr(render) ')';
        display: inline;